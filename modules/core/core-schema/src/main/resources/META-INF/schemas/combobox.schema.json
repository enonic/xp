{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-schema.enonic.com/8.0.0/combobox.schema.json",
  "allOf": [
    {
      "$ref": "https://json-schema.enonic.com/8.0.0/input.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "ComboBox"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              },
              "label": {
                "$ref": "https://json-schema.enonic.com/8.0.0/localized-text.schema.json"
              }
            }
          }
        },
        "default": {
          "type": "string"
        }
      },
      "required": [
        "options"
      ]
    }
  ],
  "unevaluatedProperties": false
}
