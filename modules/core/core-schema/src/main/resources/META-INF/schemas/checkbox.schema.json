{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-schema.enonic.com/8.0.0/checkbox.schema.json",
  "allOf": [
    {
      "$ref": "https://json-schema.enonic.com/8.0.0/input.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "CheckBox"
        },
        "alignment": {
          "type": "string"
        },
        "default": {
          "type": "string",
          "enum": [
            "checked",
            "unchecked"
          ]
        }
      }
    }
  ],
  "unevaluatedProperties": false
}
