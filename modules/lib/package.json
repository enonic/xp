    },
    "homepage": "https://github.com/enonic/xp/tree/master#readme",
    "devDependencies": {
        "@enonic-types/global": "./typescript",
        "@enonic/eslint-config": "^0.1.0",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "cp-file": "^9.1.0",
        "eslint": "^8.15.0",
        "glob": "^8.0.3",
        "ts-loader": "^9.3.0",
        "typescript": "^4.6.4"
    }
