{
    "name": "lib",
    "private": true,
    "version": "1.0.0",
    "description": "Root package for libs development.",
    "scripts": {
        "build:js": "npm run copy:resources && tsc --project tsconfig.build.json",
        "build:types": "tsc --declaration --emitDeclarationOnly",
        "build": "npm run build:js && npm run build:types",
        "copy:package": "node utils/copyPackage.js",
        "copy:resources": "node utils/copyResources.js",
        "lint": "eslint .",
        "lint:quiet": "eslint --quiet .",
        "fix": "eslint --fix .",
        "pre": "npm run lint && npm run build:types",
        "show": "node ./entry.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/enonic/xp.git#master"
    },
