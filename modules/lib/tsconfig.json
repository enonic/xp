{
    "compilerOptions": {
        "lib": ["es5"],
        "removeComments": false,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@enonic-types"
        ],
        "sourceMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "./**/build",
        "./**/out",
        "./lib-*/*.d.ts"
    ]
}
