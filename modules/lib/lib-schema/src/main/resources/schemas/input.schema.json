{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "classpath:/schemas/input.schema.json",
  "allOf": [
    {
      "$ref": "classpath:/schemas/form-item.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "$ref": "classpath:/schemas/i18n.schema.json"
        },
        "immutable": {
          "type": "boolean"
        },
        "indexed": {
          "type": "boolean"
        },
        "customText": {
          "type": "string"
        },
        "helpText": {
          "$ref": "classpath:/schemas/i18n.schema.json"
        },
        "validationRegexp": {
          "type": "string"
        },
        "occurrences": {
          "$ref": "classpath:/schemas/occurrence.schema.json"
        },
        "config": {
          "$ref": "classpath:/schemas/config.schema.json"
        },
        "maximize": {
          "type": "boolean"
        },
        "default": {
          "$ref": "classpath:/schemas/default.schema.json"
        },
        "type": {
          "enum": [
            "ComboBox",
            "Date",
            "Time",
            "DateTime",
            "CheckBox",
            "Double",
            "GeoPoint",
            "HtmlArea",
            "ImageUploader",
            "MediaUploader",
            "AttachmentUploader",
            "ImageSelector",
            "MediaSelector",
            "ContentSelector",
            "CustomSelector",
            "RadioButton",
            "Tag",
            "TextArea",
            "TextLine",
            "Long",
            "ContentTypeFilter",
            "SiteConfigurator"
          ]
        }
      },
      "required": [
        "name",
        "label"
      ]
    }
  ],
  "unevaluatedProperties": false
}
