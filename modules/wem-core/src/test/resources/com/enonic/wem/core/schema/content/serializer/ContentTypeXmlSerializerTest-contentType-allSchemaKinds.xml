<?xml version="1.0" encoding="UTF-8"?>
<type>
  <name>all_schemas</name>
  <module>mymodule</module>
  <display-name>All the Base Types</display-name>
  <content-display-name-script>$('firstName') + ' ' + $('lastName')</content-display-name-script>
  <super-type>system:content</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <allow-children>true</allow-children>
  <form>
    <form-item-set name="mySet">
      <label/>
      <immutable>false</immutable>
      <custom-text/>
      <help-text/>
      <occurrences minimum="0" maximum="1"/>
      <items>
        <layout name="myFieldSet" type="FieldSet">
          <label>My field set</label>
          <items>
            <input type="TextLine" built-in="true" name="myTextLine">
              <label/>
              <immutable>false</immutable>
              <indexed>false</indexed>
              <custom-text/>
              <help-text/>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
        </layout>
        <mixin-reference name="myCommonInput">
          <name>myCommonInput</name>
          <reference>system:my_shared_input</reference>
          <type>Input</type>
        </mixin-reference>
      </items>
    </form-item-set>
  </form>
</type>

