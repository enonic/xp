<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="processor" class="com.enonic.wem.thymeleaf.internal.ThymeleafProcessorImpl"/>

  <service interface="com.enonic.wem.thymeleaf.ThymeleafProcessor" ref="processor"/>

  <service interface="com.enonic.wem.script.ScriptContributor">
    <bean class="com.enonic.wem.thymeleaf.internal.ThymeleafScriptContributor">
      <property name="processor" ref="processor"/>
    </bean>
  </service>

</blueprint>
