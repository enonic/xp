{
    "index": {
        "number_of_shards": 1,
        "number_of_replicas": 0
    },
    "analysis": {
        "filter": {
            "fulltext_ngrams": {
                "side": "front",
                "max_gram": 12,
                "min_gram": 1,
                "type": "edgeNGram",
                "side": "front"
            }
        },
        "analyzer": {
            "default_index": {
                "tokenizer": "keyword",
                "filter": ["lowercase", "asciifolding"]
            },
            "default_search": {
                "tokenizer": "keyword",
                "filter": ["lowercase", "asciifolding"]
            },
            "keywordlowercase": {
                "type": "custom",
                "tokenizer": "keyword",
                "filter": ["lowercase", "asciifolding"]
            },
            "ngram": {
                "type": "custom",
                "filter": [
                    "standard",
                    "lowercase",
                    "asciifolding",
                    "fulltext_ngrams"
                ],
                "type": "custom",
                "tokenizer": "standard"
            },
            "content_default": {
                "type": "custom",
                "filter": [
                    "standard",
                    "lowercase",
                    "asciifolding"
                ],
                "type": "custom",
                "tokenizer": "standard"
            },
            "all_field_analyzer": {
                "type": "custom",
                "filter": [
                    "standard",
                    "lowercase",
                    "asciifolding",
                    "fulltext_ngrams"
                ],
                "type": "custom",
                "tokenizer": "standard"
            }
        }

    }
}