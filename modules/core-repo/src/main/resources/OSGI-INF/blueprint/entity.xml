<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="blobService" interface="com.enonic.wem.api.blob.BlobService"/>

  <bean id="nodeDao" class="com.enonic.wem.repo.internal.entity.dao.NodeDaoImpl">
    <property name="blobService" ref="blobService"/>
  </bean>

  <bean id="nodeService" class="com.enonic.wem.repo.internal.entity.NodeServiceImpl">
    <property name="indexService" ref="indexService"/>
    <property name="nodeDao" ref="nodeDao"/>
    <property name="workspaceService" ref="workspaceService"/>
    <property name="versionService" ref="versionService"/>
    <property name="queryService" ref="queryService"/>
    <property name="blobService" ref="blobService"/>
  </bean>

  <service ref="nodeService" auto-export="interfaces"/>

</blueprint>
