<?xml version="1.0" encoding="UTF-8"?>
<content-type xmlns="urn:enonic:xp:model:1.0">
  <display-name>Virtual Content Type</display-name>
  <description>description</description>
  <display-name-expression>${firstName} ${lastName}</display-name-expression>
  <display-name-label>Display Name Label</display-name-label>
  <super-type>content</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <allow-child-content>false</allow-child-content>

  <x-data name="myapplication:metadata"/>

  <form>
    <input type="Date" name="myDate">
      <label>label</label>
      <immutable>false</immutable>
      <indexed>false</indexed>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>

</content-type>
