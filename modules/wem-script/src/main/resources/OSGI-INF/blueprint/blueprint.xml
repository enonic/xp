<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="environment" class="com.enonic.wem.script.internal.ScriptEnvironmentImpl" init-method="start" destroy-method="stop">
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <service interface="com.enonic.wem.script.ScriptRunnerFactory">
    <bean class="com.enonic.wem.script.internal.RhinoScriptRunnerFactory">
      <property name="environment" ref="environment"/>
    </bean>
  </service>

</blueprint>
