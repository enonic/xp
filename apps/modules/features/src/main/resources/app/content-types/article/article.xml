<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Article</display-name>
  <content-display-name-script>$('title')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <input name="title" type="TextLine">
      <label>Title</label>
      <occurrences minimum="1" maximum="1"/>
      <help-text>Article title</help-text>
    </input>
    <input name="preface" type="TextLine">
      <label>Preface</label>
      <occurrences minimum="0" maximum="1"/>
      <help-text>Preface of the article</help-text>
    </input>
    <input name="body" type="TextArea">
      <label>Body</label>
      <occurrences minimum="1" maximum="1"/>
      <help-text>Body of the article</help-text>
    </input>
  </form>
</content-type>
