<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Display Name Script</display-name>
  <content-display-name-script>$('firstName', 'middleName', 'lastName')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <input name="firstName" type="TextLine">
      <label>First name</label>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="middleName" type="TextLine">
      <label>Middle name</label>
      <indexed>true</indexed>
      <occurrences minimum="0" maximum="0"/>
    </input>
    <input name="lastName" type="TextLine">
      <label>Last name</label>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</content-type>
